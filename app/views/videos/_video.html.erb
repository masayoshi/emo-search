<div class="row-fluid">
  <div class="span2">
    <%= link_to image_tag(video.thumbnail_url, alt:video.title), video_path(video), class: "thumbnail"%>
  </div>
  <div class="span10">
    <h4><%= link_to video.title.html_safe, video_path(video) %></h4>
    <% video.nicovideo_tags.each do |tag| %>
      <% if params[:tags].present? && params[:tags].split("+").include?(tag.name) %>
        <span class="label label-info"><%= tag.name.html_safe %></span>
      <% else %>
        <%= link_to tag.name.html_safe, tagged_videos_path(tag.name), class: "label" %>
      <% end %>
    <% end %>
    <p>
    <blockquote>
      <%= truncate(video.description, length:150) %>
      <small><%= video.first_retrieve.to_s(:db) %> ( <%= time_ago_in_words video.first_retrieve %> 前に投稿 )</small>
    </blockquote>
    </p>
  </div>
</div><!--/row-->
<hr />
